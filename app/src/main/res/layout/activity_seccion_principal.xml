<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/book_background">

    <TextView
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:text="Seleccione la categoria"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="55dp"
        android:padding="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:onClick="accesoFiccion"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:text="Ficcion"
            android:textSize="35sp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#008080"/>

        <Button
            android:onClick="accesoArte"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:text="Arte"
            android:textSize="35sp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#008080"/>
        <Button
            android:onClick="accesoTerror"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:text="terror"
            android:textSize="35sp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#155ec4"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:text="Tecnologia"
            android:textSize="35sp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#155ec4"/>
    </LinearLayout>

    <Button
        android:onClick="clickaccesoMapa"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="end"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="#155ec4"
        android:background="@drawable/map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>